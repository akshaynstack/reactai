generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id // Clerk user ID
  email             String   @unique
  firstName         String?
  lastName          String?
  imageUrl          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([email])
}

model GeneratedApp {
  id        String   @id @default(nanoid(5))
  model     String
  prompt    String
  code      String
  createdAt DateTime @default(now())

  @@index([id])
}
